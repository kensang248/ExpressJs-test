extends ../layouts/common.pug
block content
  h1 Login
  if errors
    each item in errors 
      .alert.alert-danger= item
    
  form(action="/auth/login", method="post")
      .form-group
        label#email Email:
        input.form-control(type="text" name="email" value=values ? values.email : '')
      .form-group
        label#password Password:
        input.form-control(type="password" name="password" value=values ? values.password : '') 
      button.btn.btn-primary LogIn