    nav(aria-label='Page navigation example')
        ul.pagination.text-center
            li.page-item
                a.page-link(href=`/product?page=${page-1}`, aria-label='Previous')
                    span(aria-hidden='true') &laquo;
                    span.sr-only Previous
            li.page-item
                a.page-link(href=`/product?page=${page-1}`) 
                    span= page -1
            li.page-item
                a.page-link(href=`/product?page=${page}`) 
                    span=page
            li.page-item
                a.page-link(href=`/product?page=${page+1}`)
                    span= page+1
            li.page-item
                a.page-link(href=`/product?page=${page+1}`, aria-label='Next')
                    span(aria-hidden='true') &raquo;
                    span.sr-only Next
